extends ../layout

block content
  <div class="btn-group btn-group-sm" role="group" aria-label="Navigation">
    <a class="btn btn-secondary" href="/documents/create" title="Add new document">
      <span data-feather="plus-circle"></span>
    </a>
  </div>
  <hr />
  <table class="table table-sm table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Employee</th>
        <th scope="col">Status</th>
        <th scope="col">Type</th>
        <th scope="col">Total</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      each document in documents
        <tr>
          <th scope="row">
            a(href='/documents/show/'+document.id) #{document.id}
          </th>
          td #{document.employee.fullName}
          td 
            include include/document_status_badge.pug
          td
            include include/document_type_icon.pug
          td(class='text-right') #{document.totalAmount}
          <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
              a(class='btn btn-secondary' href='/documents/print/'+document.id)
                <span data-feather="printer"></span>
              a(class='btn btn-secondary' href='/documents/show/'+document.id)
                <span data-feather="eye"></span>
              a(class='btn btn-secondary' href='/documents/edit/'+document.id)
                <span data-feather="edit"></span>
            </div>
          </td>
        </tr>
    </tbody>
  </table>