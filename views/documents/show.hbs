<div class="btn-group btn-group-sm" role="group" aria-label="Navigation">
  <a class="btn btn-secondary" href="/documents" title="Back to documents">
    <span data-feather="chevron-left"></span>
  </a>
  <a class="btn btn-secondary" href="/documents/edit/{{document.id}}" title="Edit document">
    <span data-feather="edit"></span>
  </a>
  {{#if document.isReimbursement }}
  <a class="btn btn-secondary" href="/documents/new" title="Add new reimbursement on document">
    <span data-feather="plus"></span><span data-feather="dollar-sign"></span>
  </a>
  {{/if}}
</div>
<hr />
<table class="table table-sm table-striped">
  <tbody>
    <tr class="showpage-container-row">
      <th scope="row">ID</th>
      <td>{{document.id}}</td>
    </tr>
    <tr class="showpage-container-row">
      <th scope="row">Employee</th>
      <td>{{document.employee.fullName}}</td>
    </tr>
    <tr class="showpage-container-row">
      <th scope="row">Status</th>
      <td>{{> document_status_badge status_id=document.status_id status=document.status.name }}</td>
    </tr>
    <tr class="showpage-container-row">
      <th scope="row">Type</th>
      <td>{{> document_type_icon type_id=document.type_id }} {{document.type.name}}</td>
    </tr>
    <tr class="showpage-container-row">
      <th scope="row">Total</th>
      <td>{{document.totalAmount}}</td>
    </tr>

    <!-- Travel -->
    {{#if document.isTravel}}
      <tr class="showpage-container-row">
        <th scope="row">Period</th>
        <td>
          {{formatDate document.travel.date_start "%d %b %Y"}} - {{formatDate document.travel.date_end "%d %b %Y"}}
        </td>
      </tr>
      <tr class="showpage-container-row">
        <th scope="row">Departure times</th>
        <td>
          {{formatDate document.travel.departure_leave_time "%d %b %Y, %R"}} - {{formatDate document.travel.destination_arrival_time "%d %b %Y, %R"}}
        </td>
      </tr>
      <tr class="showpage-container-row">
        <th scope="row">Return times</th>
        <td>
          {{formatDate document.travel.destination_leave_time "%d %b %Y, %R"}} - {{formatDate document.travel.departure_arrival_time "%d %b %Y, %R"}}
        </td>
      </tr>

    {{/if}}
    <!-- /Travel -->

    <!-- Reimbursement -->
    {{#if document.isReimbursement}}
      <tr class="showpage-container-row">
        <td scope="row" colspan="2">
          <p><strong>Reimbursements</strong></p>
          <table class="table table-sm table-bordered showpage-table-embedded">
            <thead>
              <th>Employee</th>
              <th>Type</th>
              <th>Date</th>
              <th>Number</th>
              <th>Value</th>
            </thead>
            <tbody>
              {{#each document.reimbursements}}
              <tr>
                <td>{{this.employee.fullName}}</td>
                <td>{{this.type.name}}</td>
                <td>{{formatDate this.date "%d %b %Y"}}</td>
                <td>{{this.number}}</td>
                <td>{{this.value}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </td>
      </tr>
    {{/if}}
    <!-- /Reimbursement -->

    <tr class="showpage-container-row">
      <th scope="row">Created</th>
      <td>{{formatDate document.created_at "%d %b %Y, %T"}}</td>
    </tr>
    <tr class="showpage-container-row">
      <th scope="row">Updated</th>
      <td>{{formatDate document.updated_at "%d %b %Y, %T"}}</td>
    </tr>
  </tbody>
  </table>