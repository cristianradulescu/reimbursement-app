<div class="btn-group btn-group-sm" role="group" aria-label="Navigation">
  <a class="btn btn-secondary" href="/documents/create" title="Add new document">
    <span data-feather="plus-circle"></span>
  </a>
</div>
<hr />
<table class="table table-sm table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Employee</th>
      <th scope="col">Status</th>
      <th scope="col">Type</th>
      <th scope="col">Total</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each documents}}
    <tr>
      <th scope="row">
        <a href="/documents/show/{{id}}">{{id}}</a>
      </th>
      <td>{{employee.fullName}}</td>
      <td>{{> document_status_badge status_id=status_id status=status.name }}</td>
      <td>{{> document_type_icon type_id=type_id }}</td>
      <td class="text-right">{{totalAmount}}</td>
      <td>
        <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
          <a class="btn btn-secondary" href="/documents/print/{{id}}">
            <span data-feather="printer"></span>
          </a>
          <a class="btn btn-secondary" href="/documents/show/{{id}}">
              <span data-feather="eye"></span>
          </a>
          <a class="btn btn-secondary" href="/documents/edit/{{id}}">
            <span data-feather="edit"></span>
          </a>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>