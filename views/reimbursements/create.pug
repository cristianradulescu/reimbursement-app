extends ../layout

block content
  <form id="newReimbursementForm" action="" method="POST">
    div(class='btn-group btn-group-sm' role='group' aria-label='Navigation')
      a(class='btn btn-secondary' href='/documents' title='Back to documents')
        span(data-feather='chevron-left')
      a(class='btn btn-secondary' href='/documents/show/'+document.id title='Show document')
        span(data-feather='eye')
      button(type='submit' class='btn btn-primary')
        span(data-feather='save')
    <hr />

    <fieldset class="form-group">
      <legend class="h5">Document #{document.id}</legend>
      <div class="form-group row">
        <label for="employeeSelect" class="col-md-2 col-form-label">Employee</label>
        <div class="col-md-4">
          input(type='text' readonly class='form-control-plaintext' value=document.employee.name)
        </div>
      </div>
      <div class="form-group row">
        <label for="documentStatusSelect" class="col-md-2 col-form-label">Status</label>
        <div class="col-md-4">
          input(type='text' readonly class='form-control-plaintext' value=document.status.name)
        </div>
      </div>
    </fieldset>

    <!-- Reimbursement -->
    <div class="form-grou" id="newDocumentFormReimbursementDetails">
      <fieldset class="form-group">
        <legend class="h6">Reimbursement(s) details</legend>
        - var widgetLabel = 'Employee'; var widgetId = 'reimbursementEmployeeSelect'; var widgetName = 'reimbursement[0][employee_id]';
          - var widgetOptions = formData.employees;
          include ../documents/include/form-group-row-select.pug

          - var widgetLabel = 'Type'; var widgetId = 'reimbursementTypeSelect'; var widgetName = 'reimbursement[0][type_id]';
          - var widgetOptions = formData.reimbursementTypes;
          include ../documents/include/form-group-row-select.pug

          - var widgetLabel = 'Value'; var widgetId = 'reimbursementValueInput'; var widgetName = 'reimbursement[0][value]';
          - var widgetInputType = 'number';
          include ../documents/include/form-group-row-input.pug

          - var widgetLabel = 'Date'; var widgetId = 'reimbursementDateInput'; var widgetName = 'reimbursement[0][date]';
          - var widgetInputType = 'date';
          include ../documents/include/form-group-row-input.pug

          - var widgetLabel = 'Number'; var widgetId = 'reimbursementDocumentNumberInput'; var widgetName = 'reimbursement[0][number]';
          - var widgetInputType = 'text';
          include ../documents/include/form-group-row-input.pug
      </fieldset>
    </div>
    <!-- /Reimbursement(s) -->
  </form>